<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Barra de Progresso -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/btnVolAgenConsul"
            android:layout_width="44dp"
            android:layout_height="33dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:src="@drawable/vol" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Agendamento de Consulta"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Campo de Busca -->
        <EditText
            android:id="@+id/buscaPaciente"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_input"
            android:drawableEnd="@drawable/search"
            android:fontFamily="@font/open_sans"
            android:hint="RG paciente"
            android:padding="12dp"
            android:textColorHint="#9E9E9E"
            android:inputType="text"/>

        <!-- Dados do Paciente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans"
            android:text="Dados Paciente"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Nome do Paciente -->
        <EditText
            android:id="@+id/nomePaciente"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:hint="Nome Completo"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="#000000"/>

        <!-- RG do Paciente -->
        <EditText
            android:id="@+id/rgPaciente"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:hint="RG"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="#000000"/>

        <!-- Data de Nascimento -->
        <EditText
            android:id="@+id/dataNascimentoPaciente"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:hint="Data Nascimento"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="#000000"/>

        <!-- ID Odontoprev -->
        <EditText
            android:id="@+id/idOdontoPrevPacinete"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:hint="ID Odontoprev"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="#000000"/>

        <!-- Dados da Consulta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans"
            android:text="Dados da Consulta"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Spinner Serviços -->
        <Spinner
            android:id="@+id/spinnerServicos"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:padding="15dp"/>

        <!-- Data da Consulta -->
        <EditText
            android:id="@+id/dataConsulta"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:drawableEnd="@drawable/calendario"
            android:hint="Data da Consulta"
            android:focusable="false"
            android:clickable="true"
            android:padding="15dp"/>

        <!-- Horário da Consulta -->
        <EditText
            android:id="@+id/horarioConsulta"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:drawableEnd="@drawable/relogio"
            android:hint="Horário da Consulta"
            android:focusable="false"
            android:clickable="true"
            android:padding="15dp"/>

        <!-- Spinner Dentistas -->
        <Spinner
            android:id="@+id/spinnerDentistas"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_input"
            android:padding="15dp"/>

        <!-- Botão Agendar -->
        <Button
            android:id="@+id/btnAgenConsul"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF6052"
            android:text="Agendar Consulta"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>